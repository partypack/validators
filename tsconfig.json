{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./lib",
    "paths": { "@lib/*": ["*"] },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./lib"]
}
